{
  "compilerOptions": {
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo",
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["src/app/*"],
      "@features/*": ["src/app/features/*"],
      "@camera/*": ["src/app/features/camera/*"],
      "@earth/*": ["src/app/features/earth/*"],
      "@halo/*": ["src/app/features/halo/*"],
      "@mars/*": ["src/app/features/mars/*"],
      "@prominence/*": ["src/app/features/prominence/*"],
      "@shared/*": ["src/app/features/shared/*"],
      "@starfield/*": ["src/app/features/starfield/*"],
      "@sun/*": ["src/app/features/sun/*"],

      "@components/*": ["src/components/*"],
      "@common/*": ["src/components/common/*"],
      "@core3d/*": ["src/components/core-3d/*"],
      "@ui/*": ["src/components/ui/*"],

      "@hooks/*": ["src/hooks/*"],
      "@types/*": ["src/types/*"],
      "@i18n/*": ["src/i18n/*"],

      "@assets/*": ["src/assets/*"],
      "@styles/*": ["src/styles/*"],
      "@state/*": ["src/app/state/*"],

      "@utils/*": ["src/shared/utils/*"],
      "@mathUtils/*": ["src/app/features/shared/utils/mathUtils"],
      "@shaderUtils/*": ["src/app/features/shared/utils/shaderUtils"],

      "@shaders/*": ["src/app/features/*/shaders/*"],
      "@textures/*": ["public/assets/textures/*"]
    },

    /* Bundler mode */
    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "isolatedModules": true,
    "moduleDetection": "force",
    "noEmit": true,
    "jsx": "react-jsx",

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noUncheckedSideEffectImports": true
  },
  "include": ["src"]
}
